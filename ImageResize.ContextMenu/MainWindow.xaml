<Window x:Class="ImageResize.ContextMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resize Images" 
        Width="540" 
        Height="620"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Primary button style with darker hover/press colors -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#0078D4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                    <Setter Property="BorderBrush" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004578"/>
                    <Setter Property="BorderBrush" Value="#004578"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- File info -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock x:Name="FileCountText" FontSize="16" FontWeight="SemiBold"/>
            <TextBlock x:Name="OriginalDimensionsText" FontSize="14" Foreground="Gray" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Percentage Slider -->
        <StackPanel Grid.Row="1" Margin="0,0,0,24">
            <TextBlock x:Name="PercentageLabel" Text="Size Percentage" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Slider x:Name="PercentageSlider" 
                        Minimum="10" 
                        Maximum="200" 
                        Value="100" 
                        TickFrequency="25"
                        TickPlacement="BottomRight"
                        IsSnapToTickEnabled="False"
                        ValueChanged="PercentageSlider_ValueChanged"/>
                <TextBlock Grid.Column="1" 
                           x:Name="PercentageText" 
                           Text="100%"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           MinWidth="60"
                           FontWeight="SemiBold"/>
            </Grid>
        </StackPanel>

        <!-- Dimensions -->
        <StackPanel x:Name="DimensionsPanel" Grid.Row="2" Margin="0,0,0,24">
            <TextBlock Text="Target Dimensions" FontWeight="SemiBold" Margin="0,0,0,12"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Width (px)" Margin="0,0,0,4"/>
                    <TextBox x:Name="WidthBox" 
                             TextChanged="DimensionBox_TextChanged"
                             PreviewTextInput="NumberValidationTextBox"/>
                </StackPanel>

                <TextBlock Grid.Column="1" 
                          Text="Ã—" 
                          FontSize="16"
                          VerticalAlignment="Center"
                          Margin="16,20,16,0"
                          Foreground="Gray"/>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Height (px)" Margin="0,0,0,4"/>
                    <TextBox x:Name="HeightBox" 
                             TextChanged="DimensionBox_TextChanged"
                             PreviewTextInput="NumberValidationTextBox"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Quality Slider -->
        <StackPanel Grid.Row="3" Margin="0,0,0,24">
            <TextBlock Text="Quality" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Slider x:Name="QualitySlider" 
                        Minimum="10" 
                        Maximum="100" 
                        Value="99" 
                        TickFrequency="10"
                        TickPlacement="BottomRight"
                        ValueChanged="QualitySlider_ValueChanged"/>
                <TextBlock Grid.Column="1" 
                           x:Name="QualityText" 
                           Text="99"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           MinWidth="40"
                           FontWeight="SemiBold"/>
            </Grid>
        </StackPanel>

        <!-- Options -->
        <StackPanel Grid.Row="4" Margin="0,0,0,24">
            <CheckBox x:Name="OverwriteCheckBox" 
                      Content="Overwrite existing files" 
                      IsChecked="True"/>
            <TextBlock Text="If unchecked, resized files will be saved with ' (1)' appended to the filename"
                       TextWrapping="Wrap"
                       Foreground="Gray"
                       FontSize="12"
                       Margin="25,8,0,0"/>
        </StackPanel>

        <!-- Progress -->
        <StackPanel Grid.Row="5" Margin="0,0,0,16" x:Name="ProgressPanel" Visibility="Collapsed">
            <TextBlock x:Name="ProgressText" Text="Processing..." Margin="0,0,0,8"/>
            <ProgressBar x:Name="ProgressBar" Height="20" Minimum="0" Maximum="100"/>
        </StackPanel>

        <!-- Error message -->
        <Border Grid.Row="6" 
                x:Name="ErrorBorder" 
                Background="#FFF4CE" 
                BorderBrush="#E09C00"
                BorderThickness="1"
                Padding="12"
                Margin="0,0,0,16"
                Visibility="Collapsed"
                CornerRadius="4">
            <StackPanel>
                <TextBlock Text="Error" FontWeight="Bold" Foreground="#E09C00"/>
                <TextBlock x:Name="ErrorText" TextWrapping="Wrap" Foreground="#333" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="100"
                    Height="32"
                    Margin="0,0,12,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="ResizeButton" 
                    Content="Resize" 
                    Width="100"
                    Height="32"
                    Background="#0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    Style="{StaticResource PrimaryButton}"
                    Click="ResizeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
