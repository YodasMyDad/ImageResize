<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <LangVersion>latest</LangVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>ImageResize</PackageId>
        <Version>1.0.0-beta</Version>
        <Authors>Lee Messenger</Authors>
        <Description>Minimal, cross-platform image resize middleware for ASP.NET Core</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/YodasMyDad/ImageResize</RepositoryUrl>
        <PackageTags>aspnetcore,image,resize,middleware,cache</PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <WarningsNotAsErrors>NU1605</WarningsNotAsErrors>
        <NoWarn>CS1998,CS8604</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\ImageResize.Abstractions\ImageResize.Abstractions.csproj" />
        <ProjectReference Include="..\ImageResize.Codecs.Skia\ImageResize.Codecs.Skia.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

</Project>
